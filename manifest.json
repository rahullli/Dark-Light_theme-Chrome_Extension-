{
    "name": "Dark-light",
    "description": "Go from light to dark and vice versa",
    "version": "1.0.0",
    "manifest_version": 2,
    "background":{
        "scripts":[
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action":{

        "default_title": "Dark-light",
        "default_popup": "popup.html"
    },

    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}